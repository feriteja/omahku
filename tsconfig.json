
{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": "./src",
      "paths": {
        "@screens": ["./screens"],
        "@router": ["./config/router"],
        "@components": ["./components"],
        "@constants": ["./utils/constant"],
        "@firebaseFunc": ["./utils/functions/firebase.ts"],
        "@redux": ["./config/redux"]
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }